<h1>Add new course</h1>

<form action="/add" method="POST">
    <div class="input-field">
        <input name="title" id="title" type="text" class="validate" required>
        <label for="title">Course Name</label>
        <span class="helper-text" data-error="Print name course"></span>
    </div>
    <div class="input-field">
        <input name="price" id="price" type="number" class="validate" required min='1'>
        <label for="price">Price Course</label>
        <span class="helper-text" data-error="Print price"></span>
    </div>
    <div class="input-field">
        <input name="img" id="img" type="text" class="validate" required>
        <label for="img">URL Images</label>
        <span class="helper-text" data-error="Print url images"></span>
    </div>

    <input type="hidden" name="_csrf" value="{{csrf}}">

    <button class="btn ptn-primary">Add course</button>
</form>