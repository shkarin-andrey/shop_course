<h1>Cart</h1>

<div id="card">
    {{#if courses.length}}
        <table>
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Number</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each courses}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{count}}</td>
                    <td>
                        <button 
                            class="btn btn-samll js-remove" 
                            data-id="{{id}}"
                            data-csrf="{{@root.csrf}}"
                        >Delete</button> 
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>

        <p><strong>Price: <span class="price">{{price}}</span></strong></p>

        <form action="/orders" method="POST">
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button class="btn">Order</button>
        </form>
    {{else}}
        <p>Card is not corses</p>
    {{/if}}
</div>