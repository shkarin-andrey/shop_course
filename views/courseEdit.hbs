<h1>Edit course {{course.title}}</h1>

<form action="/courses/edit" method="POST">
    <div class="input-field">
        <input name="title" placeholder="Print course name" id="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Course Name</label>
        <span class="helper-text" data-error="Print name course"></span>
    </div>
    <div class="input-field">
        <input name="price" placeholder="Print course course" id="price" type="number" class="validate" required min='1' value="{{course.price}}">
        <label for="price">Price Course</label>
        <span class="helper-text" data-error="Print price"></span>
    </div>
    <div class="input-field">
        <input name="img" id="img" type="text" class="validate" required value="{{course.img}}">
        <label for="img">URL Images</label>
        <span class="helper-text" data-error="Print url images"></span>
    </div>

    <input type="hidden" name="id" value="{{course.id}}">
    <input type="hidden" name="_csrf" value="{{csrf}}">

    <button class="btn ptn-primary">Edit course</button>
</form>

<form action="/courses/remove" method="POST" class="courses-form">
    <input type="hidden" name="id" value="{{course.id}}">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button class="btn red">Delete course</button>
</form>